<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
		http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

	<changeSet id="00-add-operationKey-columns" author="ihrigb">
		<addColumn tableName="operation_keys">
			<column name="code" type="varchar(64)">
				<constraints nullable="true" />
			</column>
			<column name="danger_to_life" type="boolean" defaultValueBoolean="false">
				<constraints nullable="false" />
			</column>
		</addColumn>

		<addUniqueConstraint
			columnNames="code"
			constraintName="operation_keys_code"
			tableName="operation_keys" />
	</changeSet>

	<changeSet id="01-add-active-resources-table" author="ihrigb">
		<createTable tableName="active_resources">
			<column name="id" type="VARCHAR(64)">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="name" type="VARCHAR(128)">
				<constraints nullable="false" />
			</column>
			<column name="radio" type="VARCHAR(128)">
				<constraints nullable="true" />
			</column>
			<column name="station_id" type="VARCHAR(64)">
				<constraints nullable="false" />
			</column>
		</createTable>

		<addUniqueConstraint
			columnNames="radio"
			constraintName="active_resources_radio"
			tableName="active_resources" />

		<addForeignKeyConstraint
			baseColumnNames="station_id"
			baseTableName="active_resources"
			constraintName="active_resources_station"
			referencedColumnNames="id"
			referencedTableName="stations" />
	</changeSet>

	<changeSet id="02-add-passive-resources-tables" author="ihrigb">
		<createTable tableName="passive_resources">
			<column name="id" type="VARCHAR(64)">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="name" type="VARCHAR(128)">
				<constraints nullable="false" />
			</column>
			<column name="radio" type="VARCHAR(128)">
				<constraints nullable="true" />
			</column>
			<column name="station_id" type="VARCHAR(64)">
				<constraints nullable="false" />
			</column>
		</createTable>

		<addUniqueConstraint
			columnNames="radio"
			constraintName="passive_resources_radio"
			tableName="passive_resources" />

		<addForeignKeyConstraint
			baseColumnNames="station_id"
			baseTableName="passive_resources"
			constraintName="passive_resources_station"
			referencedColumnNames="id"
			referencedTableName="stations" />

		<createTable tableName="passive_active_resources">
			<column name="passive_resource_id" type="VARCHAR(64)">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="active_resource_id" type="VARCHAR(64)">
				<constraints primaryKey="true" nullable="false" />
			</column>
		</createTable>

		<addForeignKeyConstraint
			baseColumnNames="passive_resource_id"
			baseTableName="passive_active_resources"
			constraintName="passive_active_resources_passive"
			referencedColumnNames="id"
			referencedTableName="passive_resources" />

		<addForeignKeyConstraint
			baseColumnNames="active_resource_id"
			baseTableName="passive_active_resources"
			constraintName="passive_active_resources_active"
			referencedColumnNames="id"
			referencedTableName="active_resources" />
	</changeSet>

	<changeSet id="03-add-real-estate-table" author="ihrigb">
		<createTable tableName="real_estates">
			<column name="id" type="VARCHAR(64)">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="name" type="VARCHAR(128)">
				<constraints nullable="false" />
			</column>
			<column name="key" type="VARCHAR(128)">
				<constraints nullable="true" />
			</column>
			<column name="address_street" type="VARCHAR(128)">
				<constraints nullable="true" />
			</column>
			<column name="address_zip" type="VARCHAR(16)">
				<constraints nullable="true" />
			</column>
			<column name="address_town" type="VARCHAR(128)">
				<constraints nullable="true" />
			</column>
			<column name="address_district" type="VARCHAR(128)">
				<constraints nullable="true" />
			</column>
			<column name="information" type="VARCHAR(2048)">
				<constraints nullable="true" />
			</column>
		</createTable>

		<addUniqueConstraint
			columnNames="name"
			constraintName="real_estates_name"
			tableName="real_estates" />

		<addUniqueConstraint
			columnNames="key"
			constraintName="real_estates_key"
			tableName="real_estates" />
	</changeSet>
</databaseChangeLog>
