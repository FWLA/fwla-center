<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
		http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

	<changeSet id="01-personnel" author="ihrigb">
		<createTable tableName="personnel">
			<column name="id" type="VARCHAR(64)">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="name" type="VARCHAR(255)">
				<constraints nullable="false" />
			</column>
			<column name="station_id" type="VARCHAR(64)">
				<constraints nullable="false" />
			</column>
			<column name="home_address_street" type="VARCHAR(255)">
				<constraints nullable="true" />
			</column>
			<column name="home_address_zip" type="VARCHAR(10)">
				<constraints nullable="true" />
			</column>
			<column name="home_address_town" type="VARCHAR(255)">
				<constraints nullable="true" />
			</column>
			<column name="home_address_district" type="VARCHAR(255)">
				<constraints nullable="true" />
			</column>
			<column name="home_latitude" type="FLOAT">
				<constraints nullable="true" />
			</column>
			<column name="home_longitude" type="FLOAT">
				<constraints nullable="true" />
			</column>
			<column name="work_address_street" type="VARCHAR(255)">
				<constraints nullable="true" />
			</column>
			<column name="work_address_zip" type="VARCHAR(10)">
				<constraints nullable="true" />
			</column>
			<column name="work_address_town" type="VARCHAR(255)">
				<constraints nullable="true" />
			</column>
			<column name="work_address_district" type="VARCHAR(255)">
				<constraints nullable="true" />
			</column>
			<column name="work_latitude" type="FLOAT">
				<constraints nullable="true" />
			</column>
			<column name="work_longitude" type="FLOAT">
				<constraints nullable="true" />
			</column>
		</createTable>

		<addForeignKeyConstraint
			baseTableName="personell"
			baseColumnNames="station_id"
			constraintName="personnel_station_id"
			referencedTableName="stations"
			referencedColumnNames="id" />
	</changeSet>

</databaseChangeLog>